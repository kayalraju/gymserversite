<!DOCTYPE html>
<html lang="en">

<%- include('common/adminHeader.ejs')%>


<body>

  <!-- ======= Header ======= -->
  <%- include('common/adminNavbar.ejs')%>
  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <%- include('common/adminSidebar.ejs')%>
  <!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Add Data</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Tour</li>
          <li class="breadcrumb-item active">Update Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Tour Data</h5>

              <!-- Vertical Form -->
              <form action="/admin/trainerupdate" method="post" class="row g-3"  enctype="multipart/form-data">
                <input type="hidden" name="trainer_id" value="<%=responseData._id%>">
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Trainer Name</label>
                  <input type="text" name="name" value="<%=responseData.name%>" class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Speciality</label>
                  <input type="text" name="speciality" value="<%=responseData.speciality%>" class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Experience</label>
                  <input type="text" name="experience" value="<%=responseData.experience%>" class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Trainer Image</label>
                  <br>
                    <% if (responseData.image) { %>
                        <img src="/<%= responseData.image %>" alt="Current Image" class="img-fluid mb-3" style="width: 90px; height: auto;">
                    <% } else { %>
                        <p>No image available</p>
                    <% } %>
                </div>
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Trainer Image</label>
                  <input type="file" name="image" accept="image/png, image/jpeg,image/jpg" class="form-control">
                </div>
                
                <div class="text-left">
                  <button type="submit" class="btn btn-primary">Update Data</button>
                </div>
              </form><!-- Vertical Form -->

            </div>
          </div>
        </div>
      </div>
    </section>

  </main>
  
  <!-- End #main -->
<div style="margin-top: 300px;"></div>

  <!-- ======= Footer ======= -->
  <%- include('common/adminFooter.ejs')%>