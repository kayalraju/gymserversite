<!DOCTYPE html>
<html lang="en">

<%- include('common/adminHeader.ejs')%>


<body>

  <!-- ======= Header ======= -->
  <%- include('common/adminNavbar.ejs')%>
  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <%- include('common/adminSidebar.ejs')%>
  <!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Add Data</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Trainer</li>
          <li class="breadcrumb-item active">Add Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Trainer Data</h5>

              <!-- Vertical Form -->
              <form action="/admin/traineradd" method="post" class="row g-3"  enctype="multipart/form-data">
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Trainer Name</label>
                  <input type="text" name="name" class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Speciality</label>
                  <input type="text" name="speciality" class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Experience</label>
                  <input type="text" name="experience" class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Trainer Image</label>
                  <input type="file" name="image" accept="image/png, image/jpeg,image/jpg" class="form-control">
                </div>
                
                <div class="text-left">
                  <button type="submit" class="btn btn-primary">Add Data</button>
                </div>
              </form><!-- Vertical Form -->

            </div>
          </div>
        </div>
      </div>
    </section>

  </main>
  
  <!-- End #main -->
<div style="margin-top: 300px;"></div>

  <!-- ======= Footer ======= -->
  <%- include('common/adminFooter.ejs')%>