<!DOCTYPE html>
<html lang="en">

<%- include('common/adminHeader.ejs')%>


<body>

  <!-- ======= Header ======= -->
  <%- include('common/adminNavbar.ejs')%>
  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
  <%- include('common/adminSidebar.ejs')%>
  <!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Add Data</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Banner</li>
          <li class="breadcrumb-item active">Add Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->
    <section class="section">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Service Data</h5>

              <!-- Vertical Form -->
              <form action="/admin/testimonialadd" method="post" class="row g-3"  enctype="multipart/form-data">

                <div class="form-group">
                  <label for="trainer">Select Service:</label>
                  <select class="form-control" id="serviceId" name="serviceId" required>
                      <% for (let service of response) { %>
                          <option value="<%= service._id %>" ><%= service.service_name %></option>
                      <% } %> 
                  </select>
                </div>

                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Client</label>
                  <input type="text" name="client_name" class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Review</label>
                  <input type="text" name="review" class="form-control">
                </div>
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Client Image</label>
                  <input type="file" name="image" accept="image/png, image/jpeg,image/jpg" class="form-control">
                </div>
                <div class="text-left">
                  <button type="submit" class="btn btn-primary">Add Data</button>
                </div>
              </form><!-- Vertical Form -->

            </div>
          </div>
        </div>
      </div>
    </section>

  </main>
  
  <!-- End #main -->
<div style="margin-top: 300px;"></div>

  <!-- ======= Footer ======= -->
  <%- include('common/adminFooter.ejs')%>